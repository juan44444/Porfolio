---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../icons/linkedinicon.astro";
import Socialpill from "../components/socialpill.astro";
import Linkedinicon from "../icons/linkedinicon.astro";
import Githubicon from "../icons/githubicon.astro";
import Gmailicon from "../icons/gmailicon.astro";
import Whatsappicon from "../icons/whatsappicon.astro";
import Experience from "../components/Experience.astro";
import Sectioncontainer from "../components/Sectioncontainer.astro";
import Briefcase from "../icons/briefcase.astro";
import Codeicon from "../icons/codeicon.astro";
import Proyects from "../components/proyects.astro";
import Usericon from "../icons/usericon.astro";
---

<Layout
  title="Portfolio de Juan C. Allayme"
  description="Portfolio de Juan C. Allayme, Desarrollador Jr. en Frontend"
>
  <main class="px-4">
    
	<div
      class="flex flex-col gap-6 mt-[100px] text-6xl font-bold text-white max-w-[600px] w-auto h-auto mx-10"
    >
      <span class="text-[2rem] md:text-[3.75rem]"
        >Building my <br /> future with<span
          class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-cyan-500"
        >
          Code</span
        >.</span>
    </div>

    <Sectioncontainer class="py-24 pb-10 mt-[-240px]">
      <img
        class="rounded-full w-20 h-20 md:w-60 md:h-60 mx-auto"
        alt="Juan photo"
        src="/public/fotoperfil.jpg"
      />

      <h1
        class="text-white text-3xl md:text-4xlfont-bold flex flex-row gap-x-4 pb-8 lg:pb-10 mt-10"
      >
        Hola!, Soy Juan C. Allayme
        <a
          href="https://www.linkedin.com/in/juan-allayme-9518b3260/"
          class="flex justify-center items-center"
        >
          <Badge> LINKEDIN.COM </Badge>
        </a>
      </h1>

      <h2 class="text-2xl opacity-80 mb-14">
        Y este es mi portfolio,         <span class="text-4xl text-yellow-200">     ¡Bienvenidos! </span>
      </h2>


	  <Sectioncontainer id="sobre-mi">
		<h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
		  <Usericon class="size-9" />
		  Sobre mi
		</h2>
  
		<h3 class="text-pretty text-left text-white/90 text-2xl font-semibold bg-black/30 border border-white/10 px-8 py-2 rounded-2xl">
		  Persona versátil, capaz de llevar a cabo varias tareas. Con amplia
		  experiencia en entornos laborales en los que se valora el compromiso y
		  la capacidad de trabajar en equipo. Me caracterizo por mi dinamismo,
		  autonomía, proactividad y liderazgo. Poseo buenos conocimientos
		  digitales. Busco desarrollarme profesionalmente.
		</h3>


	  </Sectioncontainer>
	  
      <nav class="flex gap-x-4 mt-8 py-10 flex-wrap" id="contacto">
        <Socialpill href="https://www.linkedin.com/in/juan-allayme-9518b3260/">
          <Linkedinicon class="size-4 md:size-6" /> LinkedIn
        </Socialpill>

        <Socialpill href="https://github.com/juan44444">
          <Githubicon class="size-4 md:size-6" /> GitHub
        </Socialpill>

        <Socialpill href="mailto:juan.allayme@gmail">
          <Gmailicon class="size-4 md:size-6" /> juan.allayme@gmail.com
        </Socialpill>

        <Socialpill>
          <Whatsappicon class="size-4 md:size-6" /> +54 264-542-6118
        </Socialpill>
      </nav>
    </Sectioncontainer>

    <Sectioncontainer id="experiencia">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia Laboral
      </h2>

      <Experience />
    </Sectioncontainer>


    <!-- <Sectioncontainer id="proyectos">
		<h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
		<Codeicon class="size-7"/>	
			Proyectos
		
		</h2>                                         habilitar en caso de ser necesario para agregar proyectos

		<Proyects />

	</Sectioncontainer> -->
  </main>
</Layout>
